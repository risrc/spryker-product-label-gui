{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'View Product Label' | trans ~ ': "' ~ productLabelTransfer.name ~ '"' %}
{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ backActionButton('/product-label-gui', 'Back to Product Labels' | trans) }}
    {{ editActionButton(
        url(
            '/product-label-gui/edit',
            { 'id-product-label': productLabelTransfer.idProductLabel }
        ),
        'Edit' | trans
    ) }}
{% endblock %}

{% block content %}

    {% include '@ProductLabelGui/View/_partials/general.twig' with {
        productLabelTransfer: productLabelTransfer
    } %}

    {% include '@ProductLabelGui/View/_partials/behavior.twig' with {
        productLabelTransfer: productLabelTransfer
    } %}

    {% include '@ProductLabelGui/View/_partials/store-relation.twig' with {
        productLabelTransfer: productLabelTransfer
    } %}

    {% include '@ProductLabelGui/View/_partials/translations.twig' with {
        productLabelTransfer: productLabelTransfer
    } %}

    {% include '@ProductLabelGui/View/_partials/related-products.twig' with {
        relatedProductTable: relatedProductTable
    } %}

{% endblock %}

{% block head_css %}
    {{ parent() }}
{% endblock %}

{% block footer_js %}
    {{ parent() }}
{% endblock %}
